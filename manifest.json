{
	"manifest_version": 2,
	"name": "Spigot Sales Graph",
	"description": "See graph/total gained and total sales in your premium spigot resources",
	"version": "1.3.0",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"permissions": [
		"https://www.spigotmc.org/*"
	],

	"content_scripts": [
		{
			"matches": ["https://www.spigotmc.org/*/buyers"],
			"js": ["ajax.js", "highcharts.js", "exporting.js", "helper.js", "money.js", "buyers.js", "dashboard.js"],
			"run_at": "document_idle"
		},
		{
			"matches": ["https://www.spigotmc.org/*/authors/*"],
			"js": ["ajax.js", "helper.js", "money.js", "author.js"]
		}
	]
}
